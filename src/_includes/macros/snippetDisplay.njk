<!-- src/_includes/macros/snippetDisplay.njk -->

{% macro snippetDisplay(snippet) %}
  <div class="bg-white shadow-lg rounded-lg mb-8 p-6">
    <h2 class="text-2xl font-semibold mb-4">{{ snippet.data.name }}</h2>
    <p class="text-gray-800 mb-4">{{ snippet.data.description }}</p>
  	{{ snippet.content | safe }}
    <img src="/snippets/{{ snippet.fileSlug }}/example.gif" alt="{{ snippet.data.name }}" class="w-full rounded-lg shadow-lg">
    <div class="mt-4 flex flex-row justify-between">
     <div>
      {% for tag in snippet.data.tags %}
        <a href="/tags/{{ tag }}" class="mr-2 mb-2 bg-blue-600 hover:bg-blue-300 text-white rounded-lg px-3 py-1 text-sm">
          {{ tag }}
        </a>
      {% endfor %}
      </div>
   <p class="mr-2 mb-2 bg-gray-200 text-gray-800 rounded-lg px-3 py-1 text-sm">
		  {{ snippet.data.type }}
		</p>
    </div>
  </div>
{% endmacro %}
