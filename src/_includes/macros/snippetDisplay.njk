{% macro snippetDisplay(snippet) %}
<div class="bg-white shadow-lg rounded-lg mb-8 p-6 snippet">
    <h2 class="text-2xl font-semibold mb-4">{{ snippet.data.name }}</h2>
    <p class="text-gray-800 mb-4">{{ snippet.data.description | markdown | safe }}</p>
    <img src="/snippets/{{ snippet.fileSlug }}/example.gif" alt="{{ snippet.data.name }}"
         class="w-full rounded-lg shadow-lg mb-6 mt-6">
    <div>
        {{ snippet.content | safe }}
    </div>
    <div class="mt-4 flex flex-col sm:flex-row flex-wrap">
        <div class="mb-4 sm:mb-0">
            {% for tag in snippet.data.tags %}
            <a href="/tags/{{ tag }}" class="mr-2 mb-2 bg-sky-600 hover:bg-sky-300 text-white rounded-lg px-3 py-1 text-sm whitespace-nowrap inline-block">
                {{ tag }}
            </a>
            {% endfor %}
        </div>
        <p class="mr-2 mb-2 bg-gray-200 text-gray-800 rounded-lg px-3 py-1 text-sm inline-block">
            {{ snippet.data.type }}
        </p>
    </div>
</div>
{% endmacro %}
